{% extends 'base2.html.twig' %}

{% block title %}Messages
{% endblock %}

{% block body %}
	<div class="col-md-8">
		<h1>Messages</h1>

		<table class="table">
			<tbody>
	<tr>
					<th>title</th>
					<td>{{ message.title }}</td>
				</tr>

				<tr>
					<th>Message</th>
					<td>{{ message.message }}</td>
				</tr>

			

				{% if message.image == null %}
					{% else %}
						<tr>
							<th>image</th>
							<td><a href="{{ asset('uploads/messages/'~ message.image) }}"><img style="width: 90px;" src="{{ asset('uploads/messages/'~ message.image) }}" alt="..."/></a></td>
						</tr>
				{% endif %}
					<td>{{ message.createdAt ? message.createdAt|date('Y-m-d H:i:s') : '' }}</td>

			</tbody>
		</table>


		<div class="row">
			<a class=" btn col-md-3 text-primary" href="{{ path('app_messages_recu', {'id': message.id}) }}">
				<i class="fa fa-arrow-left fa-lg" aria-hidden="true"></i>
			</a>
			<div class="col-md-3 ">{{ include('messages/_delete_form.html.twig') }}</div>

		</div>
	</div>
{% endblock %}
