{% extends 'base.html.twig' %}

{% block title %}Connexion !
{% endblock %}

{% block body %}
	<section>
		<div class="container mb-3">

			<div class="row  d-flex justify-content-center   align-items-center vh-100">
				<form class='col-md-6' method="post">
					{% if error %}
						<div class="alert alert-danger">
							<i class="fas fa-exclamation-triangle"></i>
							{{ error.messageKey|trans(error.messageData, 'security') }}
							, si vous aves oubliez votre mot de passe
							<a href="{{path('app_forgot_password_request')}}">appuyez ici</a>
						</div>
					{% endif %}


					{% if app.user %}
						<div class="mb-3">
							 Vous êtes connecté(e) comme 
							{{ app.user.userIdentifier }},
							<a href="{{ path('app_logout') }}">déconnecter</a>
						</div>
					{% endif %}

					<h1 class="h3 m-5 font-weight-normal text-center">Connectez-vous</h1>
					<label for="inputEmail" class="my-4">Email</label>
					<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
					<label for="inputPassword" class="my-4">Mot de passe</label>
					<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

					<input
					type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

					{#
															        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
															        See https://symfony.com/doc/current/security/remember_me.html
															
															        <div class="checkbox mb-3">
															            <label>
															                <input type="checkbox" name="_remember_me"> Remember me
															            </label>
															        </div>
															    #}

					<div class="text-center mt-3">
						<button class="btn btn-lg btn-primary m-5  text-center" type="submit">
							Me connecter
						</button>
					</div>
					<div class="mt-2">
						<a href="{{path('app_forgot_password_request')}}">Mot de passe oublié ?</a>
					</div>
					<hr>
					<h4 class=" mb-4 font-weight-normal text-center mb-4">Je suis nouveau ici</h4>
					<p class="text-center">
						<a href="#">S'inscrire</a>
					</p>
				</form>
			</div>
		</div>
	</section>

{% endblock %}
